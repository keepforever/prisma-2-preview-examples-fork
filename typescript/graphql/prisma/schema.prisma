datasource db {
    provider = "postgresql"
    url      = "postgresql://postgres:postgres@localhost:5432/mydatabase?schema=public"
}

generator photon {
  provider = "photonjs"
}

model User {
    id          String  @default(cuid()) @id
    name        String?
    email       String  @unique
    arenaHandle String?
    password    String
    isAdmin     Boolean @default(false)
    decks       Deck[]
}

model Deck {
    id            String  @default(cuid()) @id
    title         String?
    list          String?
    sideBoardList String?
    altList       String?
    altCard       String?
    comments      Comment[]
    author        User?

}

model Comment {
    id      String  @default(cuid()) @id 
    content String?
    author  User?
    deck    Deck?
}
